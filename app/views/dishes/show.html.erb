<h2><%= @dish.name %></h2>

<p>Description: <%= @dish.description %></p>
<h3>Ingredients:</h3>
<% @dish.ingredients.each do |ingredient| %>
<ul>
<li><%= ingredient.name %></li>
</ul>
<% end %>


<h4>Add an ingredient to this dish:</h4>
<%= form_with(model: @dish_ingredient, params: {dish_id: @dish.id, ingredient_id: :ingredient_id}, method: :post, data: {turbo: false}) do |f| %>
<%= f.label :ingredient_id %>
<%= f.text_field :ingredient_id %> 
<%= f.submit "Submit" %>
<% end %> 



<br>
<p>Total calories: <%= @dish.calorie_count %></p>
<p>Created by Chef: <%= @dish.chef.name %> </p>
